{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],

    "jsx": "react-jsx",

    "moduleResolution": "bundler",

    "strict": true,
    "skipLibCheck": true,

    "declaration": true,
    "declarationMap": true,

    "sourceMap": true,
    "outDir": "dist",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
